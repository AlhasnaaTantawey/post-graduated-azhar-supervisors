<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="azhar.supervisors.pg_azhar.ChangeTitleFragment"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView_ChangeTitleFragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="طلب تغير عنوان الرساله"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radio1_ChangeTitleFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text=" جوهرى"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radio2_ChangeTitleFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="غير جوهرى"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:checked="false"
                android:textSize="20dp" />
        </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/blue"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="من"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/textView_ChangeTitleFragment_originaltitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="4"
                android:padding="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/black_border"
                android:textStyle="bold"
                android:gravity="center"
                android:text="العنوان الاصلى للرساله"
                android:textColor="@color/blue"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="الى"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black" />

            <EditText
                android:id="@+id/textView_ChangeTitleFragment_newArabictitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border"
                android:textColor="@color/blue"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:hint="ادخل العنوان بالغه العربيه "
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="20dp"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="الى"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black" />

            <EditText
                android:id="@+id/textView_ChangeTitleFragment_newEnglishtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border"
                android:textColor="@color/blue"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:hint="ادخل العنوان بالغه الانجليزيه "
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="20dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/button_ChangeTitleFragment_sedRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:text="ارسال الطلب"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="70dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_marginBottom="50dp"
            />
          </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>